.about-container .author-card {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 460rpx;
}
.about-container .author-card-inner {
    margin: auto;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
}
.about-container .author-card__bg {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}
.about-container .author-card__avatar {
    width: 119rpx;
    height: 119rpx;
    border: 1rpx solid #fff;
    border-radius: 50%;
}
.about-container .author-card__name {
    font-size: 30rpx;
    font-weight: bold;
    color: #fff;
    margin-top: 28rpx;
}
.about-container .author-card .contact-btn {
    width: 208rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #fff;
    color: #131211;
    font-size: 30rpx;
    font-weight: bold;
    text-align: center;
    border-radius: 30rpx;
    margin-top: 52rpx;
}
.about-container .author-detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  padding: 39rpx 34rpx;
}
.about-container .author-detail__title {
    position: relative;
    font-size: 36rpx;
    font-weight: bold;
    color: #424242;
    margin-bottom: 48rpx;
}
.about-container .author-detail__title::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 4rpx;
      width: 100%;
      height: 10rpx;
      background: rgba(242, 184, 8, 0.37);
}
.about-container .author-detail__subTitle {
    font-size: 32rpx;
    font-weight: bold;
    color: #424242;
}
.about-container .author-detail__subTitle::after {
      content: '';
      display: block;
      width: 100%;
      height: 1px;
      margin-top: 14rpx;
      margin-bottom: 30rpx;
      background: rgba(66, 66, 66, 0.5);
}
.about-container .author-detail__info {
    margin-bottom: 60rpx;
}
.about-container .author-detail__info .label {
      font-size: 28rpx;
      font-weight: bold;
      color: #424242;
}
.about-container .author-detail__info .content {
      font-size: 28rpx;
      color: #666;
}
.about-container .author-detail .wxapp-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.about-container .author-detail .wxapp-item__headimg {
      width: 100rpx;
      height: 100rpx;
      border-radius: 50%;
}
.about-container .author-detail .wxapp-item__text {
      margin-top: 20rpx;
      font-size: 28rpx;
      color: #666;
}

